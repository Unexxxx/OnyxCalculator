<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:background="#2B2B2B"
        android:fillViewport="true">


        <TextView
            android:id="@+id/tv_calcu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="20dp"
            android:gravity="end"
            android:maxLength="12"
            android:textColor="#FFD664"
            android:layout_weight="1"
            android:textSize="50dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="C"
                android:textColor="#FFD664"
                android:textSize="36dp" />

            <Button
                android:id="@+id/btn_quo"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="÷"
                android:textColor="#FFD664"
                android:textSize="36dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="7"
                android:textColor="#9DA5A7"
                android:textSize="36dp" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="8"
                android:textColor="#9DA5A7"
                android:textSize="36dp" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="9"
                android:textColor="#9DA5A7"
                android:textSize="36dp" />

            <Button
                android:id="@+id/btn_prod"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="×"
                android:textColor="#FFD664"
                android:textSize="36dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="4"
                android:textColor="#9DA5A7"
                android:textSize="36dp" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="5"
                android:textColor="#9DA5A7"
                android:textSize="36dp" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="6"
                android:textColor="#9DA5A7"
                android:textSize="36dp" />

            <Button
                android:id="@+id/btn_diff"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="–"
                android:textColor="#FFD664"
                android:textSize="36dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="1"
                android:textColor="#9DA5A7"
                android:textSize="36dp" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="2"
                android:textColor="#9DA5A7"
                android:textSize="36dp" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="3"
                android:textColor="#9DA5A7"
                android:textSize="36dp" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="+"
                android:textColor="#FFD664"
                android:textSize="36dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btn_percent"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="%"
                android:textColor="#9DA5A7"
                android:textSize="36dp" />

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="0"
                android:textColor="#9DA5A7"
                android:textSize="36dp" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/number_buttons"
                android:onClick="onCalculatorClick"
                android:text="."
                android:textColor="#9DA5A7"
                android:textSize="36dp" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="#FFD664"
                android:onClick="onCalculatorClick"
                android:text="="
                android:textColor="#1A2B2F"
                android:textSize="36dp" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>