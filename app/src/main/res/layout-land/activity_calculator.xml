<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    >

    <TextView
        android:id="@+id/tv_output"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:textAlignment="viewEnd"
        android:maxLines="1"
        android:background="#2B2B2B"
        android:textColor="#FFD664"
        android:textSize="16sp"
        android:gravity="bottom">
    </TextView>
    <TextView
        android:id="@+id/tv_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:textAlignment="viewEnd"
        android:maxLines="1"
        android:background="#2B2B2B"
        android:textColor="#FFD664"
        android:textSize="30sp"
        android:gravity="bottom">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_allClear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#FFD664"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="AC" />

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#FFD664"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="C" />

                <Button
                    android:id="@+id/btn_quo"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#FFD664"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="÷" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#9DA5A7"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="7" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#9DA5A7"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="8" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#9DA5A7"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="9" />

                <Button
                    android:id="@+id/btn_prod"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#FFD664"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="×" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#9DA5A7"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="4" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#9DA5A7"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="5" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#9DA5A7"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="6" />

                <Button
                    android:id="@+id/btn_diff"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#FFD664"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="–" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#9DA5A7"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="1" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#9DA5A7"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="2" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#9DA5A7"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="3" />

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#FFD664"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_percent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#9DA5A7"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="%" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#9DA5A7"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="0" />

                <Button
                    android:id="@+id/btn_dot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/number_buttons"
                    android:onClick="onCalculatorClick"
                    android:textColor="#9DA5A7"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="." />

                <Button
                    android:id="@+id/btn_equal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFD664"
                    android:onClick="onCalculatorClick"
                    android:textColor="#1A2B2F"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:text="=" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>